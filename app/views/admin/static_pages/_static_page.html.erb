<tr>
  <td><%= static_page.position %></td>
  <td><%= static_page.title %></td>
  <td><%= link_to static_page.link, static_page.link, target: '_blank' %></td>
  <td class="text-center"><%= content_tag(:i, '', class: 'fa fa-check') if static_page.visible %></td>
  <td class="actions text-right" data-hook="admin_pages_index_row_actions">
    <%= link_to ('<i class="fa fa-pencil"></i>').html_safe, edit_admin_static_page_path(static_page), class: "btn btn-sm btn-draw-accented", data: {toggle: "tooltip", original_title: "Edit", trigger: "hover"} %>
    <%= link_to ('<i class="fa fa-trash"></i>').html_safe, admin_static_page_path(static_page), class: "btn btn-sm btn-danger", data: {:confirm => 'Are you sure?', toggle: "tooltip", original_title: "Delete", trigger: "hover"}, :method => :delete %>
  </td>
</tr>
<% if static_page.children.any? %>
  <tr>
    <td><i class="fa fa-arrow-right"></i></td>
    <td colspan="5" style="padding: 0;">
      <%= render 'static_page_table', pages: static_page.children %>
    </td>
  </tr>
<% end %>